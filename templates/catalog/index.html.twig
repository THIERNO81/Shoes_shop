
<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome ShoesShop!{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" 
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
        <link rel="stylesheet" href="/css/style.css">
        
        {% block stylesheets %}{% endblock %}    
                
        
    </head>
    <body>
      <nav class="navbar navbar-expand-lg nav-bg">
        <div class="container-fluid">
          <a class="navbar-brand" href="#">
          <img src="{{ asset('images/logoDooke.jpg') }}" alt="logoDooke.jpg" height="85">
          </a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
              <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                  <a class="nav-link active" aria-current="page" href="{{path('app_welcome')}}">Accueil</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link active" aria-current="page" href="{{path('app_catalog')}}">Produits</a>
                </li>
          
                <li class="nav-item">
                  <a class="nav-link active" aria-current="page" href="{{ path ('contact_index')}}">Contact</a>
                </li>
                             
              </ul>
              <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link" href="{{path('app_panier')}}">Panier</a>
                </li>

                {% if app.user %}
                  {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{path('admin_home')}}">Back Office</a>
                    </li>
                                
                      
                    <li class="nav-item">
                        <a class="nav-link" href="{{path('app_profil_controler')}}">Mon compte</a>
                    </li>
                  {% endif %}
                  
                  <li class="nav-item">
                      <a class="nav-link" href="{{path('app_logout')}}">Déconnexion</a>
                  </li>

                {% else %}
                  <li class="nav-item">
                      <a class="nav-link" href="{{path('app_login')}}">Connexion</a>
                  </li>
                  <li class="nav-item">
                      <a class="nav-link" href="{{path('app_register')}}">Inscription</a>
                  </li>    
                 {% endif %}
                
              </ul>
              <form class="d-flex" role="rechercher">
                <input class="form-control me-2" type="Rechercher" placeholder="Rechercher" aria-label="rechercher">
                <button class="btn btn-outline-success" type="submit">Rechercher</button>
              </form>
            </div>
          </div>
      </nav>

      <main class="text-center text-primary fst-italic my-2">
        {%block h1 %}{% endblock %}</h1>
        {% block body %}{% endblock %}
      </main>
<!-- Début du conteneur de grille Bootstrap -->
<div class="container-fluid">

    <h1 class="text-center my-3" style="background-color: #ccc; border: 2px solid #ffc107; padding: 10px;">Catalogue des produits</h1>


    <div class="row">
        <!-- Début de la boucle pour chaque produit dans la liste 'produits' -->
        {% for produit in produits %}
            <!-- Colonne Bootstrap pour la mise en page responsive -->
            <div class="col-lg-3 col-md-6 mb-4"> <!-- Adapté pour rendre la grille plus responsive -->
                <!-- Lien vers la fiche produit -->
                <a href="{{ path('app_catalog', {id: produit.id}) }}" class="card-link">
                    <!-- Carte Bootstrap pour chaque produit -->
                    <div class="card">
                        <!-- Corps de la carte contenant les détails du produit -->
                        <div class="card-body">
                            <!-- Titre du produit, centré horizontalement -->
                            <h2 class="card-title text-center">{{ produit.NomProduit | upper }}</h2> <!-- Utilisation de h2 pour le titre -->
                            <!-- Prix du produit, centré horizontalement -->
                            <h3 class="text-center PrixProduit">{{ produit.PrixProduit }}€</h3> <!-- Utilisation de h3 pour le prix -->
                            <!-- Image du produit, provenant du répertoire 'images/products/' -->
                            <img src="{{ asset('images/products/' ~ produit.imagePath) }}" alt="" class="img-fluid rounded mx-auto d-block" style="box-shadow : 2px 2px 6px;"> <!-- Ajout de classes Bootstrap pour l'image -->
                        </div>
                    </div>
                </a>
            </div>
        {% endfor %} <!-- Fin de la boucle -->
    </div> <!-- Fin de la rangée -->
</div> <!-- Fin du conteneur de grille Bootstrap -->


        
         <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
        {% block javascripts %}{% endblock %}
    </body>

    {# {% include 'footer.html.twig' %} #}


</html>

