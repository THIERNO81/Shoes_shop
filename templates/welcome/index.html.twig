<script>
    $(document).ready(function(){
        // Démarrer le carrousel
        $('#carouselExampleIndicators').carousel();

        // Déclencher la transition de diapositive chaque seconde
        setInterval(function(){
            $('#carouselExampleIndicators').carousel('next');
        }, 1000);

        // Écouter l'événement "slid.bs.carousel"
        $('#carouselExampleIndicators').on('slid.bs.carousel', function () {
            // Vérifier si la dernière diapositive est atteinte
            if ($('.carousel-inner .carousel-item:last').hasClass('active')) {
                // Revenir au début du carrousel
                $('#carouselExampleIndicators').carousel(1);
            }
        });
    });
</script>



