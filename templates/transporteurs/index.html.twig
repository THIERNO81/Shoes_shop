{% extends 'base.html.twig' %}

{% block title %}Transporteurs{% endblock %}

{% block body %}
    <h1>Transporteurs</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NameTransport</th>
                <th>Description</th>
                <th>PrixTransport</th>
                <th>CreatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for transporteur in transporteurs %}
            <tr>
                <td>{{ transporteur.id }}</td>
                <td>{{ transporteur.nameTransport }}</td>
                <td>{{ transporteur.description }}</td>
                <td>{{ transporteur.prixTransport }} </td>
                <td>{{ transporteur.createdAt ? transporteur.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_transporteurs_show', {'id': transporteur.id}) }}" class="btn btn-primary btn-sm">Afficher</a>
                    <a href="{{ path('app_transporteurs_edit', {'id': transporteur.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                    <a href="{{ path('app_transporteurs_delete', {'id': transporteur.id}) }}" class="btn btn-danger btn-sm">Supprimer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_transporteurs_new') }}" class="btn btn-success">Créer un nouveau transporteur</a>
{% endblock %}
